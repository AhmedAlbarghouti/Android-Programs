<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/fragMsg"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="25dp"
            android:text="Message Here" />


        <TextView
            android:id="@+id/fragId"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="ID="
            android:textSize="25dp"
            android:layout_below="@id/fragMsg"/>

        <TextView
            android:id="@+id/idText"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="25dp"
            android:layout_below="@id/fragMsg"
            android:layout_toRightOf="@id/fragId"/>



            <CheckBox
                android:id="@+id/sendCheck"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragId"
                android:layout_width="match_parent"
                android:text="Is a Send Message"
                />

            <Button
                android:layout_alignParentBottom="true"
                android:id="@+id/hideButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hide"


                />



    </RelativeLayout>


</FrameLayout>