<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WeatherForecast">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/weatherImage"
            android:layout_width="200dp"
            android:layout_height="250dp" />

        <TextView
            android:id="@+id/currentTemp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/weatherImage"

            android:text="Current Temp" />

        <TextView
            android:text="Min Temp:   "
            android:id="@+id/minTemp"
            android:layout_toRightOf="@id/weatherImage"
            android:layout_below="@id/currentTemp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <TextView
            android:text="Max Temp: "
            android:id="@+id/maxTemp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/minTemp"
            android:layout_toRightOf="@id/weatherImage"


            />

        <TextView
            android:id="@+id/uvRate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/maxTemp"
            android:layout_toRightOf="@id/weatherImage"/>

        <ProgressBar
            android:id="@+id/pBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/uvRate"
            android:layout_toRightOf="@id/weatherImage"/>

    </RelativeLayout>




</LinearLayout>