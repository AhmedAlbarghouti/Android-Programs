<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context=".ChatRoomActivity">



        <ListView
            android:id="@+id/myListView"
            android:layout_width="300dp"
            android:layout_height="700dp"

            />






        <Button
            android:id="@+id/mySButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="@string/sButton"
            android:layout_below="@id/myListView"
            />

        <EditText
            android:inputType="textCapSentences"
            android:id="@+id/txtmsg"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="@string/tHere"
            android:layout_below="@id/myListView"
            android:layout_toRightOf="@id/mySButton"
            />
        <Button
            android:id="@+id/myRButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="@string/rButton"
            android:layout_below="@id/myListView"
            android:layout_toRightOf="@id/txtmsg"

            />

    <FrameLayout
        android:id="@+id/fLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/myListView"

        />



</RelativeLayout>